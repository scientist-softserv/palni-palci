<%= form_tag @target, method: :get, class: 'form-inline js-per-page' do |f| %>
  <% if params[:q].present? %>
    <%= hidden_field_tag :q, params[:q] %>
  <% end %>
  <% if params[:page].present? %>
    <%= hidden_field_tag :page, params[:page] %>
  <% end %>
  Show <%= select_tag :per, options_for_select([10, 25, 100], selected: params[:per]), class: 'form-control js-per-page__select' %> per page
  <%= submit_tag 'Update', class: 'btn btn-default js-per-page__submit' %>
<% end %>
