<%= form_tag @target, method: :get, class: 'form-inline js-per-page' do |f| %>
  <% if params[:q].present? %>
    <%= hidden_field_tag :q, params[:q] %>
  <% end %>
  <% if params[:page].present? %>
    <%= hidden_field_tag :page, params[:page] %>
  <% end %>
  <%= t('hyku.admin.groups.label.per_page_prefix') %>
  <%= select_tag :per, options_for_select([10, 25, 100], selected: params[:per]), class: 'form-control js-per-page__select' %>
  <%= t('hyku.admin.groups.label.per_page') %>
  <%= submit_tag t('hyku.admin.groups.action.per_page'), class: 'btn btn-default js-per-page__submit' %>
<% end %>
