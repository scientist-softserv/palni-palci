<div class="panel panel-default">
  <%# TODO: dynamic form   for new or edit %>
  <%= simple_form_for(@auth_provider) do |f| %>
    <div class="panel-body">
      <% if @auth_provider.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@auth_provider.errors.count, "error") %> prohibited this authentication provider from being saved:</h2>
          <ul>
            <% @auth_provider.errors.messages.each do |key, messages| %>
              <li><%= key %> &quot;<%= @auth_provider.errors.details[key].first[:value] %>&quot; <%= messages.join(' and ') %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.hidden_field :account_id, value: @site.account_id %>
      <%# TODO: add localizations %>
      <%= f.input :provider, label: t('hyku.admin.auth_providers.label.provider'), required: true %>
      <%= f.input :client_id, label: t('hyku.admin.auth_providers.label.client_id'), required: true %>
      <%= f.input :client_secret, label: t('hyku.admin.auth_providers.label.client_secret'), required: true %>
      <%= f.input :idp_sso_service_url, label: t('hyku.admin.auth_providers.label.idp_sso_service_url') %>
    </div>

    <div class="panel-footer text-right">
      <%= f.submit class: 'btn btn-primary action-save' %>
    </div>
  <% end %>
</div>
