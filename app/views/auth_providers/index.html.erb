<p id="notice"><%= notice %></p>

<h1>Auth Providers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auth_providers.each do |auth_provider| %>
      <tr>
        <td><%= auth_provider.provider %>
        <td><%= link_to auth_provider.client_id, auth_provider %></td>
        <td><%= auth_provider.client_secret %></td>
        <td><%= auth_provider.idp_sso_service_url %></td>
        <td><%= link_to 'Edit', edit_auth_provider_path(auth_provider) %></td>
        <td><%= link_to 'Destroy', auth_provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auth Provider', new_auth_provider_path %>
