<div class="panel panel-default tabs">
  <ul class="nav nav-tabs" role="tablist">
    <li class="active">
      <a href="#about_page" role="tab" data-toggle="tab"><%= t('.tabs.about_page') %></a>
    </li>
    <li>
      <a href="#announcement_text" role="tab" data-toggle="tab"><%= t('.tabs.announcement_text') %></a>
    </li>
    <li>
      <a href="#marketing_text" role="tab" data-toggle="tab"><%= t('.tabs.marketing_text') %></a>
    </li>
    <li>
      <a href="#featured_researcher" role="tab" data-toggle="tab"><%= t('.tabs.featured_researcher') %></a>
    </li>
  </ul>
  <div class="tab-content">
    <div id="about_page" class="tab-pane active">
      <div class="panel panel-default labels">
        <%= simple_form_for @site, url: site_content_blocks_path do |f| %>
          <div class="panel-body">
            <div class="field form-group">
                <%= f.label :about_page %><br>
                <%= f.text_area :about_page, value: f.object.about_page.value, class: 'form-control tinymce', rows: 20, cols: 120 %>
            </div>
          </div>
          <div class="panel-footer">
            <%= link_to 'Cancel', hyrax.admin_admin_sets_path, class: 'btn btn-default pull-right'%>
            <%= f.button :submit, class: 'btn btn-primary pull-right'%>
          </div>
        <% end %>
      </div>
    </div>
