<% content_for :page_header do %>
  <h1><span class="fa fa-file-text-o"></span> <%= t(:'sufia.admin.sidebar.content_blocks') %></h1>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <%= form_for(@site, url: site_content_blocks_path) do |f| %>
        <div class="panel-heading">
          <h3 class="panel-title">Content Blocks</h3>
        </div>
        <div class="panel-body">
            <% if @site.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

                    <ul>
                        <% @site.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <div class="field form-group">
                <%= f.label :announcement_text %><br>
                <%= f.text_area :announcement_text, value: f.object.announcement_text.value, class: 'form-control tinymce', rows: 20, cols: 120 %>
            </div>

            <div class="field form-group">
                <%= f.label :marketing_text %><br>
                <%= f.text_area :marketing_text, value: f.object.marketing_text.value, class: 'form-control tinymce', rows: 20, cols: 120 %>
            </div>

            <div class="field form-group">
                <%= f.label :featured_researcher %><br>
                <%= f.text_area :featured_researcher, value: f.object.featured_researcher.value, class: 'form-control tinymce', rows: 20, cols: 120 %>
            </div>

            <%= tinymce_assets %>
            <%= tinymce %>
        </div>
        <div class="panel-footer">
          <%= f.submit class: 'btn btn-primary pull-right' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
