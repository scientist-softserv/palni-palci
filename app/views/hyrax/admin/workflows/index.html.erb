<%# imported from hyrax 2.5.1 to add headers, hand roll pagination %>
<% provide :page_header do %>
  <h1><span class="glyphicon glyphicon-ok-circle"></span> <%= t('.header') %></h1>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default tabs">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active">
          <a href="#under-review" role="tab" data-toggle="tab"><%= t('.tabs.under_review') %></a>
        </li>
        <li>
          <a href="#published" role="tab" data-toggle="tab"><%= t('.tabs.published') %></a>
        </li>
      </ul>
      <div class="tab-content">
        <div id="under-review" class="tab-pane active">
          <div class="panel panel-default labels">
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-condensed table-striped" id="workflow-under-review-table">
                  <thead>
                  <tr>
                    <th>Work</th>
                    <th>Depositor</th>
                    <th>Submission Date</th>
                    <th>Last Modified By</th>
                    <th>Last Modified Date</th>
                    <th>Status</th>
                  </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div id="published" class="tab-pane">
          <div class="panel panel-default labels">
            <div class="panel-body">
              <div class="table-responsive">
                <table class="table table-condensed table-striped" id="workflow-approved-table">
                  <thead>
                  <tr>
                    <th>Work</th>
                    <th>Depositor</th>
                    <th>Submission Date</th>
                    <th>Last Modified By</th>
                    <th>Last Modified Date</th>
                    <th>Status</th>
                  </tr>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
