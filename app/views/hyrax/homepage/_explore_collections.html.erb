<%# OVERRIDE from Hyrax 2.9.0 to add featured collection functionality %>

<% featured_collection = f.object.presenter %>
<tr>
  <td>
    <div class="d-flex">
      <div>
        <%= link_to [hyrax, featured_collection] do %>
          <%= render_thumbnail_tag(featured_collection,
                                   { class: 'img-responsive hidden-xs file_listing_thumbnail', alt: "#{featured_collection.title_or_label} #{ t('hyrax.homepage.admin_sets.thumbnail')}" },
                                   {suppress_link: true}
          ) %>
        <% end %>
      </div>
      <div>
        <%= link_to [hyrax, featured_collection] do %>
          <%= featured_collection.title.first %>
        <% end %>
      </div>
      </div>
    </div>
  </td>
</tr>

<ul class="list-inline collection-highlights-list">
  <li>
    <%= link_to t('hyrax.homepage.admin_sets.link'),
                main_app.search_catalog_path(f: { human_readable_type_sim: ["Collection"]}),
                class: 'btn btn-default' %>
  </li>
</ul>
