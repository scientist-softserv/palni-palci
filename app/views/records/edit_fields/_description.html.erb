<%# Copied from Hyrax to support dynamic labels and hints for custom worktypes %>

<%# Avoid NoMethod error when rendering partial in Collection form %>
<% record = @collection || curation_concern %>
<% if f.object.multiple? key %>
  <%= f.input :description,
      as: :multi_value,
      label: label_for(term: :description, record_class: record.class),
      hint: hint_for(term: :description, record_class: record.class),
      input_html: { rows: '14', type: 'textarea' },
      required: f.object.required?(key) %>
<% else %>
  <%= f.input :description,
      as: :text,
      label: label_for(term: :description, record_class: record.class),
      hint: hint_for(term: :description, record_class: record.class),
      input_html: { rows: '14' },
      required: f.object.required?(key) %>
<% end %>
