<%# copied from Hyrax to create custom label and hints for OER worktype %>
<% if curation_concern.class == Oer %>
  <%= f.input :resource_type, as: :select, 
  collection: Hyrax::OerTypesService.select_all_options, 
  label: t("hyrax.oer.labels.resource_type"),
  hint: t("hyrax.oer.hints.resource_type"),
  input_html: { class: 'form-control', multiple: true } %> 
<% else %>
<%= f.input :resource_type, as: :select, collection: Hyrax::ResourceTypesService.select_options,
    input_html: { class: 'form-control', multiple: true } %>
<% end %>