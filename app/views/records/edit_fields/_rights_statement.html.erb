<%# Copied from Hyrax to support dynamic labels and hints for custom worktypes %>

<% rights_statements = Hyrax.config.rights_statement_service_class.new %>
<%# Avoid NoMethod error when rendering partial in Collection form %>
<% record = @collection || curation_concern %>
<%= f.input :rights_statement,
    collection: rights_statements.select_active_options,
    include_blank: true,
    item_helper: rights_statements.method(:include_current_value),
    label: label_for(term: :rights_statement, record_class: record.class),
    hint: hint_for(term: :rights_statement, record_class: record.class),
    input_html: { class: 'form-control' } %>
