<ul class="nav nav-pills nav-stacked">
  <li class="h5"><%= t('sufia.admin.sidebar.activity') %></li>
  <li>
    <a role="button" class="collapsed collapse-toggle" data-toggle="collapse" href="#collapseRepositoryActivity" aria-expanded="false" aria-controls="collapseRepositoryActivity">
      <span class="fa fa-line-chart"></span>
      <span><%= t('sufia.admin.sidebar.repository_activity') %></span>
    </a>
    <ul class="collapse nav nav-pills nav-stacked" id="collapseRepositoryActivity">
      <%= nav_link(sufia.admin_path) do %>
        <span class="fa fa-dashboard"></span> <%= t('sufia.admin.sidebar.activity_summary') %>
      <% end %>
      <%= nav_link(main_app.status_path) do %>
        <span class="fa fa-flag"></span> <%= t('sufia.admin.sidebar.system_status') %>
      <% end %>
    </ul>
  </li>
  <li>
    <a role="button" class="collapsed collapse-toggle" data-toggle="collapse" href="#collapseUserActivity" aria-expanded="false" aria-controls="collapseUserActivity">
      <span class="fa fa-line-chart"></span>
      <span><%= t('sufia.admin.sidebar.user_activity') %></span>
    </a>
    <ul class="collapse nav nav-pills nav-stacked" id="collapseUserActivity">
      <%= nav_link(sufia.profile_path(current_user)) do %>
        <span class="fa fa-user"></span> <%= t('sufia.admin.sidebar.profile') %>
      <% end %>
      <%= nav_link(sufia.notifications_path) do %>
        <span class="fa fa-bell"></span> <%= t('sufia.admin.sidebar.user_notifications') %>
         <%= render partial: 'users/notify_number' %>
      <% end %>
      <%= nav_link(sufia.transfers_path) do %>
        <span class="fa fa-arrows-h"></span> <%= t('sufia.admin.sidebar.transfers') %>
      <% end %>
    </ul>
  </li>

    <li class="h5">Configuration</li>
    <li>
      <a role="button" class="collapsed collapse-toggle" data-toggle="collapse" href="#collapseSettings" aria-expanded="false" aria-controls="collapseSettings">
        <span class="fa fa-cog"></span>
        <span><%= t('sufia.admin.sidebar.settings') %></span>
      </a>
      <ul class="collapse nav nav-pills nav-stacked" id="collapseSettings">
        <% if can? :manage, Site %>
          <%= nav_link(main_app.edit_site_labels_path) do %>
            <span class="fa fa-institution"></span> <%= t('sufia.admin.sidebar.labels') %>
          <% end %>

          <%= nav_link(main_app.edit_site_content_blocks_path) do %>
            <span class="fa fa-file-text-o"></span> <%= t('sufia.admin.sidebar.content_blocks') %>
          <% end %>
        <% end %>

        <%= nav_link(sufia.admin_features_path) do %>
          <span class="fa fa-wrench"></span> Technical
        <% end %>
      </ul>
    </li>

    <%= nav_link(sufia.admin_admin_sets_path) do %>
      <span class="fa fa-sitemap"></span> <%= t('sufia.admin.sidebar.admin_sets') %>
    <% end %>

    <% if can?(:manage, Role) || can?(:manage, User) %>
    <li>
      <a role="button" class="collapsed collapse-toggle" data-toggle="collapse" href="#collapseRoles" aria-expanded="false" aria-controls="collapseRoles">
        <span class="fa fa-users"></span>
        <span><%= t('sufia.admin.sidebar.roles_and_permissions') %></span>
      </a>
      <ul class="collapse nav nav-pills nav-stacked" id="collapseRoles">
        <% if can? :manage, Role %>
          <%= nav_link(main_app.site_roles_path) do %>
            <span class="fa fa-gavel"></span> <%= t('sufia.admin.sidebar.manage_roles_and_permissions') %>
          <% end %>
        <% end %>

        <% if can? :manage, User %>
          <%= nav_link(sufia.profiles_path) do %>
            <span class="fa fa-user"></span> <%= t('sufia.admin.sidebar.manage_users') %>
          <% end %>
        <% end %>
      </ul>
    </li>
    <% end %>

    <% if can? :manage, Account %>
      <%= nav_link(main_app.accounts_path) do %>
        <span class="fa fa-gears"></span> <%= t('sufia.admin.sidebar.accounts') %>
      <% end %>
    <% elsif Site.account && can?(:manage, Site.account) %>
      <%= nav_link(main_app.account_path(Site.account)) do %>
        Account
      <% end %>
    <% end %>

    <li class="h5"><%= t('sufia.admin.sidebar.tasks') %></li>
    <%= nav_link(sufia.admin_stats_path) do %>
      <span class="fa fa-bar-chart"></span> <%= t('sufia.admin.sidebar.statistics') %>
    <% end %>
</ul>
