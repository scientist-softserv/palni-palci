<% # OVERRIDE Hyku 4.0.0 template for client theming, enable markdown for collection title  %>

<% featured_collection = f.object.presenter %>
  <div class="col-xs-6 col-md-2">
    <%= link_to [hyrax, featured_collection] do %>
      <%= render_thumbnail_tag(featured_collection, { class: "img-responsive center-block", alt: "#{featured_collection.title.first} #{ t('hyrax.homepage.admin_sets.thumbnail')}" }, {suppress_link: true}) %>
      <% end %>
    <div class="collection-item-title">
      <%= link_to [hyrax, featured_collection] do %>
        <h3>
          <%= markdown(featured_collection.title.first) %>
        </h3>
      <% end %>
    </div>
  </div>
