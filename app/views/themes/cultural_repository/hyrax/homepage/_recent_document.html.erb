<% # OVERRIDE  Hyku 4.0.0 template for client theming, enable markdown in work title %>
<div class="recently-uploaded col-xs-6 col-md-2">
  <%= link_to [main_app, recent_document] do %>
    <%= render_thumbnail_tag(recent_document, {suppress_link: true}, class: 'img-responsive center-block') %>
  <% end %>
  <div class="recent-doc-title">
    <%= link_to [main_app, recent_document] do %>
      <h3><%= markdown(recent_document.to_s) %></h3>
    <% end %>
  </div>
</div>
