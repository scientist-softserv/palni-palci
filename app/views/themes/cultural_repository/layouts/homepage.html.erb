<% # OVERRIDE: Hyrax 2.9 template to remove the render of the /controls partial and removed the background gradient span %>
<% content_for(:navbar) do %>
  <div class="image-masthead cultural-homepage">
    <div class="background-container" style="background-image: url('<%= banner_image %>')"></div>

    <div class="container">
      <div class="col-md-4 facet-panel-background-color mt-40 mb-40-0">
        <%= render 'themes/cultural_repository/facets' %>
      </div>

      <div class="col-md-8 site-title-container">
        <div class="site-title h1" style="text-align: left;">
          <%= render "hyrax/homepage/marketing" if controller_name == 'homepage' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% content_for(:precontainer_content) do %>
  <%= render 'hyrax/homepage/announcement' if controller_name == 'homepage' %>
<% end %>

<%= render template: 'layouts/hyrax' %>
