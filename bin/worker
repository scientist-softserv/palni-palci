#!/usr/local/bin/ruby
if ENV['GOOGLE_OAUTH_PRIVATE_KEY_SECRET'] && !ENV['GOOGLE_OAUTH_PRIVATE_KEY_SECRET'].empty?
  %x{echo #{ENV['GOOGLE_OAUTH_PRIVATE_KEY_SECRET']} | base64 --decode > prod-cred.p12}
end

if ENV['DB_URL'] && !ENV['DB_URL'].empty?
  ENV['DB_URL'] = ENV['DB_URL'].gsub('pool=5', 'pool=30')
else
  puts 'DB_URL not set, no pool change needed'
end

exec "echo $DB_URL && bundle exec sidekiq"
